<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="Domain.Cuvant"
           table="cuvant">
        <id name="id" column="id" >
            <generator class="increment"/>
        </id>
        <property
                name="litere"
                type="text"
                column="litere"/>
        <property
                name="caracteristici"
                type="text"
                column="caracteristici"/>


    </class>
</hibernate-mapping>