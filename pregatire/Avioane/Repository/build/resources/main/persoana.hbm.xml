<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="Domain.Persoana"
           table="persoana">
        <id name="id" column="id" >
            <generator class="increment"/>
        </id>
        <property
                name="parola"
                type="text"
                column="parola"/>
        <property
                name="email"
                type="text"
                column="email"/>
        <property
                name="participa"
                type="boolean"
                column="participa"/>


    </class>
</hibernate-mapping>